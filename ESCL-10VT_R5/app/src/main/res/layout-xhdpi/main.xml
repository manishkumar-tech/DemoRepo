<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="22"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="36"
                android:background="@drawable/temp"
                android:padding="8dp"
                app:srcCompat="@drawable/company" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="64"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="80"
                    android:fontFamily="@font/adamina"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:weightSum="18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="42"
                        android:gravity="center_vertical"
                        android:text="@string/connection_status_main"
                        android:textColor="@color/label_text_color"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/label_text_color"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/img_connection_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="10"
                        android:padding="1dp"
                        app:srcCompat="@drawable/circle_red" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="42"
                        android:gravity="center_vertical"
                        android:text="@string/scan_status_main"
                        android:textColor="@color/label_text_color"
                        android:textSize="16sp" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/label_text_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_scan_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="1dp"
                        app:srcCompat="@drawable/circle_red" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="42"
                    android:gravity="center_vertical"
                    android:text="@string/datalogger_id"
                    android:textColor="@color/label_text_color"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/label_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_datalogger_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="@string/dash"
                    android:textColor="@color/label_text_color"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_connection"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_connection"
                    app:tint="@color/heading_text_color" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/connection"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_system_information"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_system_information"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/system_info"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_system_configuration"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_system_configuration"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/system_configuration"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_modem_configuration"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_modem_configuration"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/modem_configuration"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_monitor_parameter"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_monitor_parameter"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/monitor_parameter"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_scan_format"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_scan_and_format"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Scan\nFormat"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_view_data"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_view_data"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/view_data"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_upload_data"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_upload_data"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/upload_data"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:onClick="click_shut_down_datalogger"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_shutdown_datalogger"
                    app:tint="@color/heading_text_color" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/shutdown_datalogger"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>