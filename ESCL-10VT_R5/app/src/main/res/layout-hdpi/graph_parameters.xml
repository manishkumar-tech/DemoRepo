<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="42"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:gravity="center"
                    android:text="@string/data_range"
                    android:textColor="@color/heading_text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="21"
                        android:gravity="center_vertical"
                        android:text="@string/from"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="@string/colon"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/from_edtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:weightSum="100">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="21"
                        android:gravity="center_vertical"
                        android:text="@string/to"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="@string/colon"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/to_edtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="58"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:gravity="center"
                    android:text="Select X-Axis Range"
                    android:textColor="@color/heading_text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="17"
                        android:gravity="center_vertical"
                        android:text="@string/from"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="@string/colon"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/from_xaxis_edtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btn_date_xrange_from"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_calender" />

                    <ImageView
                        android:id="@+id/btn_time_xrange_from"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_clock" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/heading_bg"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:weightSum="100">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="17"
                        android:gravity="center_vertical"
                        android:text="@string/to"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="@string/colon"
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/to_xaxis_edtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/label_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btn_date_xrange_to"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_calender" />

                    <ImageView
                        android:id="@+id/btn_time_xrange_to"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_clock" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/heading_bg"
            android:gravity="center"
            android:text="@string/select_y_axis_range"
            android:textColor="@color/heading_text_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/heading_bg"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:weightSum="100">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="@string/max"
                android:textColor="@color/label_text_color"
                android:textSize="14sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="12"
                android:gravity="center_vertical"
                android:text="@string/colon"
                android:textColor="@color/label_text_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/max_yaxis_edtxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="45"
                android:autofillHints=""
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="13"
                android:maxLines="1"
                android:textColor="@color/edit_value_text_color"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/para_ok"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="35"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/heading_bg"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:weightSum="100">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="@string/min"
                android:textColor="@color/label_text_color"
                android:textSize="14sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="12"
                android:gravity="center_vertical"
                android:text="@string/colon"
                android:textColor="@color/label_text_color"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/min_yaxis_edtxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="45"
                android:autofillHints=""
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="13"
                android:maxLines="1"
                android:textColor="@color/edit_value_text_color"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/para_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="35"
                android:background="@drawable/bg_button"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>