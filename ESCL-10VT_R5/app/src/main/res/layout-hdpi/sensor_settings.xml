<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:weightSum="1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="460"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/heading_bg"
                android:gravity="center"
                android:text="VW Sensor"
                android:textColor="@color/heading_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="80"
            android:background="@drawable/heading_bg"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Sensor Model"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextSensorModelValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Sensor S.N."
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextSensorIdValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="XXXXX"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Meas Range (m)"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextMsrngRangeValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Specific Gravity"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"
                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextSpcfcGrvtyValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="X Parameter"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <Spinner
                    android:id="@+id/spinner_XParameter"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/spinner_bg"
                    android:gravity="center|bottom"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Inst. Depth (m)"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextInstDepthValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Coefficient A0"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextCoeffA0Value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"

                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Coefficient A1"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextCoeffA1Value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:gravity="center_vertical"
                    android:text="Coefficient A2"
                    android:textColor="@color/label_text_color" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@color/label_text_color" />

                <EditText
                    android:id="@+id/editTextCoeffA2Value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="55"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="460"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonUpdateSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>