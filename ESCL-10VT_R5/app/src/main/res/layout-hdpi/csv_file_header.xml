                    android:maxLines="1"
                    android:textColor="@color/edit_value_text_color"
                    android:textSize="14sp"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:weightSum="100">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center_vertical"
                    android:text="@string/enable_header"
                    android:textColor="@color/label_text_color"
                    android:textSize="14sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/colon"
                    android:textColor="@color/label_text_color"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkBoxEnableHeader"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:gravity="center"
                    android:textColor="@color/label_text_color" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/buttonUpdateHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="75"
            android:background="@drawable/bg_button"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="75"
            android:background="@drawable/heading_bg"
            android:gravity="center"
            android:text="@string/logger_memory_action"
            android:textColor="@color/heading_text_color"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="75"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDownloadData"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="@string/download_data"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonEraseMem"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="@string/erase_memory"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="14sp" />
